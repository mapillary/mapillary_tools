{
    "type": "object",
    "properties": {
        "MAPLatitude": {
            "type": "number",
            "description": "Latitude of the image",
            "minimum": -90,
            "maximum": 90
        },
        "MAPLongitude": {
            "type": "number",
            "description": "Longitude of the image",
            "minimum": -180,
            "maximum": 180
        },
        "MAPAltitude": {
            "type": "number",
            "description": "Altitude of the image"
        },
        "MAPCaptureTime": {
            "type": "string",
            "description": "Capture time of the image",
            "pattern": "[0-9]{4}_[0-9]{2}_[0-9]{2}_[0-9]{2}_[0-9]{2}_[0-9]{2}_[0-9]+"
        },
        "MAPPhotoUUID": {
            "type": "string"
        },
        "MAPCompassHeading": {
            "type": "object",
            "properties": {
                "TrueHeading": {
                    "type": "number"
                },
                "MagneticHeading": {
                    "type": "number"
                }
            },
            "required": [
                "TrueHeading",
                "MagneticHeading"
            ],
            "additionalProperties": false
        },
        "MAPSequenceUUID": {
            "type": "string",
            "description": "Arbitrary key used to group images",
            "pattern": "[a-zA-Z0-9_-]+"
        },
        "MAPMetaTags": {
            "type": "object"
        },
        "MAPDeviceMake": {
            "type": "string"
        },
        "MAPDeviceModel": {
            "type": "string"
        },
        "MAPGPSAccuracyMeters": {
            "type": "number"
        },
        "MAPCameraUUID": {
            "type": "string"
        },
        "MAPFilename": {
            "type": "string"
        },
        "MAPOrientation": {
            "type": "integer"
        },
        "filename": {
            "type": "string",
            "description": "The image file's path relative to the image directory"
        }
    },
    "required": [
        "MAPCaptureTime",
        "MAPLatitude",
        "MAPLongitude",
        "filename"
    ],
    "additionalProperties": false
}
